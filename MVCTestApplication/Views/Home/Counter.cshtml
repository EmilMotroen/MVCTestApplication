@model MVCTestApplication.Models.HomeModel
@{
    ViewData["Title"] = "Counter";
}

<div>
    <h1>@ViewData["Title"]</h1>
    <p>Current Count: @Model.CurrentCount</p>
    <div>
        @using (Html.BeginForm("IncrementCount", "Home", FormMethod.Post))
        {
            <input type="submit" value="Increment Count" class="btn btn-primary" />
        }
    </div>
</div>